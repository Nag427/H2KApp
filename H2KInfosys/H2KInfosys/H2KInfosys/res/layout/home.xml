        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
         	>
        		 <LinearLayout
       		 android:layout_width="match_parent"
        		android:layout_height="wrap_content"
       			 android:layout_weight="1"
        		android:orientation="vertical"
         		>
         	 <Button
         	     android:id="@+id/imageOnlineTraining"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:background="@drawable/online"
   			android:layout_gravity="center_horizontal"
   			android:layout_marginTop="10dp"
   			android:layout_weight="1"
   		
   			/>
          <ImageView
              android:id="@+id/imageVideos"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/videos"
   			android:layout_gravity="center_horizontal"
   			android:layout_marginTop="10dp"
   			android:layout_weight="1"
   		
   			/>
          <ImageView
              android:id="@+id/imageBlogs"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/blogs"
   			android:layout_gravity="center_horizontal"
   			android:layout_marginTop="10dp"
   			android:layout_weight="1"
   		
   			/>
          <ImageView
              android:id="@+id/imageContactForm"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/contact_form"
   			android:layout_gravity="center_horizontal"
   			android:layout_marginTop="10dp"
   			android:layout_weight="1"
   		
   			/>
          <ImageView
              android:id="@+id/imageTesting"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_marginTop="10dp"
   			android:src="@drawable/testing"
   			android:layout_gravity="center_horizontal"
   			
   			android:layout_weight="1"
   		
   			/>
             
         </LinearLayout>
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
         >
           <ImageView
               android:id="@+id/imageTrainingCourses"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/trainnig_courses"
   			android:layout_marginTop="10dp"
   			android:layout_gravity="center_horizontal"
   			android:layout_weight="1"
   		
   			/>
            <ImageView
                android:id="@+id/imageForums"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/forums"
   			android:layout_marginTop="10dp"
   			android:layout_gravity="center_horizontal"
   			
   			android:layout_weight="1"
   		
   			/>
             <ImageView
                 android:id="@+id/imageItJobs"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/it_jobs"
   			android:layout_marginTop="10dp"
   			android:layout_gravity="center_horizontal"
   			android:layout_weight="1"
   		
   			/>
              <ImageView
                  android:id="@+id/imageSeo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
   			android:src="@drawable/seo"
   			android:layout_marginTop="10dp"
   			android:layout_gravity="center_horizontal"
   			android:layout_weight="1"
   		
   			/>
         </LinearLayout>
         
         
    	       
